<h1>Log in</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <p class="control has-icons-left has-icon-right">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input is-normal', placeholder: 'Email', :required => true %>
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-check"></i>
      </span>
    </p>
  </div>
  <div class="field">
    <%= f.label :password, class: 'label' %>
    <p class="control has-icons-left">
      <%= f.password_field :password, autocomplete: "current-password", class:'input is-normal', placeholder: 'Password' %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </p>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'checkbox' %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit "Log in", class: 'button is-dark' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
